---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import ServiceCard from "../components/ServiceCard.astro";

const services = [
  {
    title: "Technical Consulting",
    description:
      "Get expert advice to make informed technical decisions. I provide tailored technical guidance to help kick of your new projects or to have your existing projects reviewed for continued success.",
    icon: "üí°",
  },
  {
    title: "Custom Application Development",
    description:
      "Have your fresh ideas realised using modern frameworks and best practices. Proof of Concepts, MVPs, and full-scale applications built to your specifications.",
    icon: "üíª",
  },
  {
    title: "Research & Training",
    description:
      "Stay ahead of the curve with the latest technologies and methodologies. I offer research services on existing and emerging tech as well as tailored training sessions for individuals and teams.",
    icon: "üèóÔ∏è",
  },
];
---

<Layout
  title="Services - Nikolaos Flabouris"
  description="Professional software engineering consulting services including web development, architecture design, code reviews, and team mentorship."
>
  <Navigation />

  <main>
    <section class="section">
      <div class="container">
        <div class="section-title">
          <h1>Services</h1>
          <p>Expert software engineering consulting tailored to your needs</p>
        </div>

        <div class="services-grid grid grid-3">
          {services.map((service) => <ServiceCard {...service} />)}
        </div>

        <div class="cta-section">
          <h2>Ready to get started?</h2>
          <p>Let's discuss how I can help you achieve your goals.</p>
          <a href="/contact" class="btn btn-primary">Contact Me</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  main {
    flex: 1;
  }

  .services-grid {
    margin-bottom: 4rem;
  }

  .cta-section {
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(59, 130, 246, 0.1),
      rgba(139, 92, 246, 0.1)
    );
    border-radius: 1rem;
    border: 1px solid var(--border-color);
  }

  .cta-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .cta-section h2 {
      font-size: 1.5rem;
    }

    .cta-section p {
      font-size: 1.1rem;
    }
  }
</style>
