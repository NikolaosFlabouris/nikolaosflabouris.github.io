---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

const skills = [
  {
    category: "Languages",
    items: ["JavaScript", "TypeScript", "Python", "Go", "Java", "SQL"],
  },
  {
    category: "Frontend",
    items: ["React", "Vue", "Astro", "Next.js", "Svelte", "HTML/CSS"],
  },
  {
    category: "Backend",
    items: ["Node.js", "Express", "FastAPI", "Django", "PostgreSQL", "MongoDB"],
  },
  {
    category: "DevOps & Cloud",
    items: ["Docker", "Kubernetes", "AWS", "Azure", "CI/CD", "Terraform"],
  },
  {
    category: "Tools & Methods",
    items: ["Git", "VS Code", "Agile", "TDD", "REST APIs", "GraphQL"],
  },
];
---

<Layout
  title="About - Nikolaos Flabouris"
  description="Learn more about Nikolaos Flabouris, a Software Engineering Consultant with expertise in full-stack development and system architecture."
>
  <Navigation />

  <main>
    <section class="section">
      <div class="container">
        <div class="section-title">
          <h1>About Me</h1>
          <p>Software Engineer, Problem Solver, Tech Enthusiast</p>
        </div>

        <div class="about-content">
          <div class="bio-card card">
            <h2>Professional Background</h2>
            <p>
              With over a decade of experience in software engineering, I
              specialize in building scalable, maintainable applications and
              guiding teams through complex technical challenges. My passion
              lies in creating elegant solutions to difficult problems and
              mentoring developers to reach their full potential.
            </p>
            <p>
              Throughout my career, I've worked with startups and Fortune 500
              companies, leading architectural decisions, conducting code
              reviews, and implementing best practices that drive engineering
              excellence. I believe in writing clean, testable code and
              fostering a culture of continuous improvement.
            </p>
            <p>
              When I'm not coding or consulting, you'll find me contributing to
              open-source projects, writing technical articles, or exploring the
              latest trends in software development. I'm committed to staying at
              the forefront of technology and sharing knowledge with the
              developer community.
            </p>
          </div>

          <div class="skills-section">
            <h2 class="skills-title">Technical Skills</h2>
            <div class="skills-grid">
              {
                skills.map((skillGroup) => (
                  <div class="skill-group card">
                    <h3>{skillGroup.category}</h3>
                    <ul class="skills-list">
                      {skillGroup.items.map((skill) => (
                        <li>{skill}</li>
                      ))}
                    </ul>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  main {
    flex: 1;
  }

  .about-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .bio-card {
    margin-bottom: 3rem;
  }

  .bio-card h2 {
    margin-bottom: 1.5rem;
    font-size: 1.75rem;
  }

  .bio-card p {
    margin-bottom: 1.25rem;
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .bio-card p:last-child {
    margin-bottom: 0;
  }

  .skills-section {
    margin-top: 3rem;
  }

  .skills-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .skill-group {
    padding: 1.5rem;
  }

  .skill-group h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--accent-blue);
  }

  .skills-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .skills-list li {
    padding: 0.5rem 0;
    color: var(--text-secondary);
    font-size: 0.95rem;
    border-bottom: 1px solid var(--border-color);
  }

  .skills-list li:last-child {
    border-bottom: none;
  }

  .skills-list li::before {
    content: "â–¹";
    color: var(--accent-blue);
    font-weight: bold;
    display: inline-block;
    width: 1em;
    margin-right: 0.5rem;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }

    .bio-card h2 {
      font-size: 1.5rem;
    }

    .bio-card p {
      font-size: 1rem;
    }
  }
</style>
