---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

const skills = [
  {
    category: "Technologies",
    items: ["Desktop & Cloud Software", "AI & ML", "IoT"],
  },
  {
    category: "Languages",
    items: ["JavaScript & TypeScript", "Python", "C#"],
  },
  {
    category: "DevSecOps",
    items: ["Containerisation", "CI/CD", "Testing"],
  },
  {
    category: "Databases",
    items: ["PostgreSQL", "MongoDB", "InfluxDB"],
  },
  {
    category: "Tooling",
    items: ["Version Control", "Development Environments", "Agentic AI"],
  },
  {
    category: "Design & Governance",
    items: [
      "Software Development Plan",
      "System Architecture",
      "Technology Roadmap",
    ],
  },
];
---

<Layout
  title="About - Nikolaos Flabouris"
  description="Learn more about Nikolaos Flabouris, a Software Engineer with expertise in full-stack development and system architecture."
>
  <Navigation />

  <main>
    <section class="section">
      <div class="container">
        <div class="section-title">
          <h1>About Me</h1>
          <p>Engineering software solutions & developing people</p>
        </div>

        <div class="about-content">
          <div class="bio-card card">
            <h2>Professional Background</h2>
            <p>
              In my past decade of experience as a Software Engineer I have
              enabled teams to develop and deploy scalable and maintainable
              software solutions. I am passionate about fostering growth and
              enhancing the technical skills within individuals and teams to
              reach their full potential.
            </p>
            <p>
              My contributions to successful software products include code
              construction, leading architectural decisions, conducting code
              reviews, and implementing best practices that drive engineering
              excellence. I seek out and knowledge of current and emerging
              tools, technologies, and trends. This enables me to distill
              complex technical concepts into clear, actionable strategies.
            </p>
          </div>

          <div class="skills-section">
            <h2 class="skills-title">Technical Skills</h2>
            <div class="skills-grid">
              {
                skills.map((skillGroup) => (
                  <div class="skill-group card">
                    <h3>{skillGroup.category}</h3>
                    <ul class="skills-list">
                      {skillGroup.items.map((skill) => (
                        <li>{skill}</li>
                      ))}
                    </ul>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  main {
    flex: 1;
  }

  .about-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .bio-card {
    margin-bottom: 3rem;
  }

  .bio-card h2 {
    margin-bottom: 1.5rem;
    font-size: 1.75rem;
  }

  .bio-card p {
    margin-bottom: 1.25rem;
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .bio-card p:last-child {
    margin-bottom: 0;
  }

  .skills-section {
    margin-top: 3rem;
  }

  .skills-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .skill-group {
    padding: 1.5rem;
  }

  .skill-group h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--accent-blue);
  }

  .skills-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .skills-list li {
    padding: 0.5rem 0;
    color: var(--text-secondary);
    font-size: 0.95rem;
    border-bottom: 1px solid var(--border-color);
  }

  .skills-list li:last-child {
    border-bottom: none;
  }

  .skills-list li::before {
    content: "â–¹";
    color: var(--accent-blue);
    font-weight: bold;
    display: inline-block;
    width: 1em;
    margin-right: 0.5rem;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }

    .bio-card h2 {
      font-size: 1.5rem;
    }

    .bio-card p {
      font-size: 1rem;
    }
  }
</style>
